  </div>  <script>
    const strains = [
      "OG Kush",
      "White Widow",
      "Northern Lights",
      "Blue Dream",
      "Sour Diesel",
      "Lemon Haze",
      "Amnesia Haze",
      "AK-47",
      "Girl Scout Cookies",
      "Pineapple Express"
    ];

    function playGame() {
      const chosen = strains[Math.floor(Math.random() * strains.length)];
      document.getElementById("strain").innerText = `You discovered: ${chosen}!`;
